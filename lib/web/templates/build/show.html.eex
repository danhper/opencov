<div class="content">
  <h2 class="row breadcrumb">
    <span class="media-body">
      <%= link @build.project.name, to: ViewHelper.project_path(@conn, :show, @build.project) %>
      <span class="separator">></span>
      <span class="build-number">
        #<%= @build.build_number %>
      </span>
    </span>
    <span class="coverage media-right <%= coverage_color(@build.coverage) %>">
      <%= format_coverage(@build.coverage) %>
    </span>
  </h2>

  <div class="build-changes">

    <h3>Latest change <span class="small"><%= human_time_ago(@build.inserted_at) %></span></h3>
    <div class="latest-change">
      <%= render "commit.html", build: @build %>
    </div>
    <div class="commit-info">
      <%= if @build.previous_coverage do %>
      <div class="coverage-diff">
        <%= coverage_diff(@build.previous_coverage, @build.coverage) %>
      </div>
      <% end %>
    </div>
  </div>

  <div class="build-jobs">
    <h3>Jobs</h3>

    <table class="table jobs">
      <thead>
        <tr>
          <th>Number</th>
          <th>Coverage</th>
          <th>Diff</th>
          <th>Run time</th>
          <th>Files count</th>
        </tr>
      </thead>
      <tbody>
        <%= for job <- @build.jobs do %>
        <tr>
          <td><%= link "##{job.job_number}", to: Routes.job_path(@conn, :show, job) %></td>
          <td>
            <%= format_coverage(job.coverage) %>
          </td>
          <td>
            <%= if job.previous_coverage do %>
              <%= render Librecov.SharedView, "coverage_diff.html", diff: job.coverage - job.previous_coverage %>
            <% end %>
          </td>
          <td><%= job |> Librecov.JobView.job_time |> human_time_ago %></td>
          <td><%= job.files_count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render Librecov.FileView,
           "list.html",
           conn: @conn,
           paginator: @paginator,
           files: @files,
           order: @order,
           filters: @filters,
           path_fn: &Librecov.Router.Helpers.build_path/4,
           path_args: [@conn, :show, @build]
           %>
