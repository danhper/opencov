.body-wrapper
  .navbar
    &.navbar-inverse
      margin-bottom 0
    .navbar-brand
      font-size 1.6em
      & > img
        display inline
        max-height 100%
        height 100%
        -o-object-fit contain
        object-fit contain
    .navbar-right
      .avatar
        border-radius 12px
        min-height 24px
        min-width 24px

    .dropdown-menu > li
      & > a, & > form > a
        display block
        padding 3px 20px
        clear both
        font-weight normal
        line-height 30px
        color #333333
        white-space nowrap

.footer
  position fixed
  background-color #bbb
  bottom 0
  padding 0.5em
  width 100%
  text-align center
